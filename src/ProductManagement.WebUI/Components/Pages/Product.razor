@page "/products"
@using ProductManagement.Application.DTOs
@using ProductManagement.Application.Services
@inject IProductService ProductService
@inject ILogger<Product> Logger

<PageTitle>Product Management</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>Product Management</h1>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                <i class="bi bi-plus-circle"></i> Create New Product
            </button>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading products...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
    }
    else if (!products.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No products found. Create your first product!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in products)
                    {
                        <tr>
                            <td><strong>@product.Name</strong></td>
                            <td>@product.Description</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>
                                <span class="badge @(product.Stock > 10 ? "bg-success" : product.Stock > 0 ? "bg-warning" : "bg-danger")">
                                    @product.Stock units
                                </span>
                            </td>
                            <td>
                                <span class="badge @(product.IsActive ? "bg-success" : "bg-secondary")">
                                    @(product.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>@product.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-info" @onclick="() => ShowEditModal(product)" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-warning" @onclick="() => ShowStockModal(product)" title="Update Stock">
                                        <i class="bi bi-box-seam"></i>
                                    </button>
                                    @if (product.IsActive)
                                    {
                                        <button class="btn btn-sm btn-secondary" @onclick="() => DeactivateProduct(product.Id)" title="Deactivate">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-success" @onclick="() => ActivateProduct(product.Id)" title="Activate">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteProduct(product.Id)" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<ProductDto> products = new();
    private bool loading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            loading = true;
            errorMessage = null;
            var result = await ProductService.GetAllProductsAsync();
            products = result.ToList();
            Logger.LogInformation("Loaded {Count} products", products.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading products");
            errorMessage = "Failed to load products. Please try again.";
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowCreateModal()
    {
        // TODO: Implement modal
        Logger.LogInformation("Show create modal");
    }

    private void ShowEditModal(ProductDto product)
    {
        // TODO: Implement modal
        Logger.LogInformation("Show edit modal for product {ProductId}", product.Id);
    }

    private void ShowStockModal(ProductDto product)
    {
        // TODO: Implement modal
        Logger.LogInformation("Show stock modal for product {ProductId}", product.Id);
    }

    private async Task DeleteProduct(Guid id)
    {
        // if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this product?"))
        //     return;

        try
        {
            await ProductService.DeleteProductAsync(id);
            await LoadProducts();
            Logger.LogInformation("Product {ProductId} deleted", id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting product {ProductId}", id);
            errorMessage = "Failed to delete product.";
        }
    }

    private async Task ActivateProduct(Guid id)
    {
        try
        {
            await ProductService.ActivateProductAsync(id);
            await LoadProducts();
            Logger.LogInformation("Product {ProductId} activated", id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error activating product {ProductId}", id);
            errorMessage = "Failed to activate product.";
        }
    }

    private async Task DeactivateProduct(Guid id)
    {
        try
        {
            await ProductService.DeactivateProductAsync(id);
            await LoadProducts();
            Logger.LogInformation("Product {ProductId} deactivated", id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deactivating product {ProductId}", id);
            errorMessage = "Failed to deactivate product.";
        }
    }
}