{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=productmanagementdb;Username=postgres;Password=123456;Maximum Pool Size=200;Timeout=30",
    "Redis": "localhost:6379"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "RetryCount": 3
  },
  "Cache": {
    "UseRedis": true,
    "UseHybridCache": false,
    "DefaultExpiration": "00:30:00"
  },
  "RateLimiting": {
    "FixedWindow": {
      "PermitLimit": 100,
      "WindowMinutes": 1
    },
    "SlidingWindow": {
      "PermitLimit": 50,
      "Window": "30s",
      "SegmentsPerWindow": 5
    },
    "Concurrency": {
      "PermitLimit": 20
    },
    "TokenBucket": {
      "PermitLimit": 30,    
      "QueueLimit": 10,
      "ReplenishmentPeriod": "1s",
      "TokensPerPeriod": 10 
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ProductManagement": "Debug",
      "ProductManagement.Infrastructure.Messaging": "Information",
      "ProductManagement.Infrastructure.Caching": "Debug"
    }
  },
  "AllowedHosts": "*"
}